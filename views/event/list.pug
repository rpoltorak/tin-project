extends ../layout

block content
  h1 Events
  p.lead List of all events
  p
    if userId
      a.btn.btn-raised(href='events/add', role='button') Add
  hr
  .row
    .col-md-8
      ul
        each category in categories
          li
            a(href='categories/' + category._id)= category.name
        else
          li There are no categories
  .row
    each event in events
      .col-md-8
        a(href='events/' + event._id, role='button')= event.name
        p #{event.date}, #{event.location}
        p #{event.category.name}
    else
      .col-md-8
        p There are no events yet
